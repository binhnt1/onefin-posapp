<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="com.sunmi.payment.permission.HARDWARE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.sunmi.peripheral.printer.BIND_PRINTER_SERVICE" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false" />

    <application
        android:name=".PosApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnefinPosApp"
        android:usesCleartextTraffic="true">

        <!-- SPLASH ACTIVITY - LAUNCHER -->
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.OnefinPosApp.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false" />
        <activity android:name=".ui.transaction.TransactionActivity"
            android:exported="false" />
        <activity android:name=".ui.transaction.TransactionDetailActivity"
            android:exported="false" />
        <activity android:name=".ui.settlement.SettlementActivity"
            android:exported="false" />
        <activity android:name=".ui.history.PaymentHistoryActivity"
            android:exported="false"  />
        <activity android:name=".ui.history.PaymentHistoryDetailActivity"
            android:exported="false"  />
        <activity android:name=".ui.billpayment.BillPaymentActivity"
            android:exported="false"  />
        <activity android:name=".ui.report.ReportActivity"
            android:exported="false"  />
        <activity
            android:name=".ui.home.QRCodeDisplayActivity"
            android:exported="false" />
        <activity
            android:name=".ui.payment.PaymentSuccessActivity"
            android:exported="false" />
        <activity
            android:name=".ui.payment.PaymentCardActivity"
            android:launchMode="singleTop"
            android:exported="false" />
        <activity
            android:name=".ui.payment.SimpleChipTestActivity"
            android:launchMode="singleTop"
            android:exported="false" />
        <activity
            android:name=".ui.external.RefundActivity"
            android:exported="false" />
        <activity
            android:name=".ui.external.ChangePinActivity"
            android:exported="false" />
        <activity
            android:name=".ui.external.CheckBalanceActivity"
            android:exported="false" />
        <activity
            android:name=".ui.modals.LogoutDialogActivity"
            android:exported="false"
            android:theme="@style/Theme.OnefinPosApp.LogoutDialogActivity" />

        <activity
            android:name=".ui.transaction.TransparentPaymentActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:launchMode="singleTop"
            android:excludeFromRecents="true" />
        <activity
            android:name=".ui.external.ExternalPaymentActivity"
            android:exported="true"
            android:theme="@style/Theme.Translucent"
            android:launchMode="singleTask">

            <!-- Cách 1: Action thường -->
            <intent-filter>
                <action android:name="com.onefin.posapp.ACTION_PAYMENT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- Cách 2: Deep link (onefin://payment) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="onefin"
                    android:host="payment" />
            </intent-filter>

            <!-- Cách 3: Mới - hỗ trợ app khác -->
            <intent-filter>
                <action android:name="com.onefin.paymentapp.MerchantAction" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="paymentapp" />
            </intent-filter>
        </activity>

        <provider
            android:name=".core.providers.TransactionProvider"
            android:authorities="com.onefin.memberapp.transaction.provider"
            android:exported="true"
            android:enabled="true">
        </provider>
    </application>
    <queries>
        <package android:name="com.sunmi.peripheral" />
        <intent>
            <action android:name="com.sunmi.peripheral.printer.SunmiPrinterService" />
        </intent>
    </queries>
</manifest>
